{
  "name": "denki-carbon",
  "version": "1.0.50",
  "scripts": {
    "test": "bun test",
    "dev": "bun run --watch src/api/index.ts",
    "start": "bun migrate && bun run src/api/index.ts",
    "build": "bun build ./src/api/index.ts --outdir ./build --target bun",
    "generate": "bun --env-file=.env.local drizzle-kit generate",
    "drop": "bun --env-file=.env.local drizzle-kit drop",
    "push": "bun --env-file=.env.local drizzle-kit push",
    "migrate": "bun run ./src/migrate.ts",
    "docker:build": "docker build --pull -t denki-carbon .",
    "docker:run": "docker run -d -p 3000:3000 denki-carbon",
    "docker:stop": "docker stop $(docker ps -a -q --filter ancestor=denki-carbon)",
    "docker:logs": "docker logs --follow $(docker ps -a -q --filter ancestor=denki-carbon)",
    "up": "docker-compose up -d --force-recreate --build",
    "up:debug": "docker-compose up  --force-recreate --build",
    "down": "docker-compose down",
    "scrape": "bun run ./src/scrapers/tso/cli.ts",
    "scrapeOccto": "bun run ./src/scrapers/occto/cli.ts",
    "seed": "bun run scrape --tso all --scrape all --predict",
    "cron": "bun run scrape --tso all --scrape latest --predict",
    "train": "bun run ./src/forecast/cli.ts",
    "setup": "bun seed",
    "studio": "bun --env-file=.env.local drizzle-kit studio --config ./drizzle.config.ts --verbose"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.2",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/cron": "^1.1.1",
    "@elysiajs/swagger": "^1.1.1",
    "@tensorflow/tfjs-node": "^4.21.0",
    "axios": "^1.7.7",
    "axios-retry": "^4.5.0",
    "commander": "^12.1.0",
    "csv-parse": "^5.5.6",
    "drizzle-orm": "^0.33.0",
    "elysia": "latest",
    "google-protobuf": "^3.21.4",
    "iconv-lite": "^0.6.3",
    "jsdom": "^24.1.3",
    "luxon": "^3.5.0",
    "node-xlsx": "^0.24.0",
    "pg": "^8.12.0",
    "pino": "^9.4.0",
    "pino-loki": "^2.3.0",
    "yauzl-promise": "^4.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/luxon": "^3.4.2",
    "@types/pg": "^8.11.8",
    "@types/yauzl": "^2.10.3",
    "@types/yauzl-promise": "^4.0.1",
    "bun-types": "latest",
    "drizzle-kit": "^0.24.2",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3"
  },
  "module": "src/index.js"
}
